#extract protein names from genpept files

baro_new = search_word_in_file("halo_sequence.gp", "DEFINITION")
acid_new = search_word_in_file("acid_sequence.gp", "DEFINITION")
alkali_new = search_word_in_file("alkali_sequence.gp", "DEFINITION")
thermo_new = search_word_in_file("sequence_thermo3.gp", "DEFINITION")
cryo_new = search_word_in_file("sequence_cryo.gp", "DEFINITION")

baro_proteins = cut_down(baro_new, "DEFINITION  ")
halo_proteins = cut_down(halo_new, "DEFINITION  ")
acid_proteins = cut_down(acid_new, "DEFINITION  ")
alkali_proteins = cut_down(alkali_new, "DEFINITION  ")
thermo_proteins = cut_down(thermo_new, "DEFINITION  ")
cryo_proteins = cut_down(cryo_new, "DEFINITION  ")

#find number of proteins in 5 environments (without barophiles)

two_p = intersection(acid_proteins, halo_proteins)
three_p = intersection(two_p, thermo_proteins)
four_p = intersection(three_p, cryo_proteins)
five_p = intersection(four_p, alkali_proteins)

print(len(five_p))

